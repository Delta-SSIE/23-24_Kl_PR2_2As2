<UserControl x:Class="_06_WPF_09_Pexeso.GameCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_06_WPF_09_Pexeso"
             mc:Ignorable="d"
             x:Name="Card"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="2" BorderBrush="Black" Margin="3" Cursor="Hand">
        <Grid Background="Gray">

            <Viewbox>
                <Label x:Name="SymbolLbl" Content="{Binding ElementName=Card, Path=Symbol}"/>
            </Viewbox>

            <Rectangle x:Name="CardBack" Fill="SandyBrown" Margin="0"/>
        </Grid>            
    </Border>
</UserControl>
